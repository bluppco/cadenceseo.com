---

// IMPORTS ASTRO ATOMS
import Link from "@/atoms/link/target-blank/index.astro"
import PictureInternalContain from "@/atoms/picture/internal/contain/index.astro"

// GET ASTRO PROPS
const {

    alternative_text,
    aria_label,
    color,
    href,
    source

} = Astro.props

---
<Link href={ href } aria_label={ aria_label }>
    <div class="rounded p-2" style={{ "background-color": color }}>
        <div class="size-4 overflow-hidden">
            <PictureInternalContain
                alternative_text={ alternative_text }
                source={ source }
            />
        </div>
    </div>
</Link>
